{.repeated section items}
    {.repeated section categories}
        {.equal?:@:"current"}
            <section class="episodes-landing">
                <div class="fill-parent mask">
                    <div class="landing-bg" style="background-image:url('{assetUrl}');" data-type="video" data-src="{customContent.episode-hero-video}" data-shape="{customContent.episode-shape}">
                        <!--<video src="assets/videos/header-episode.mp4" loop autoplay></video>-->
                    </div><!-- landing-bg -->
                </div><!-- .fill-parent -->
                <!--<div class="episodes-landing-geo"></div>-->
                <div class="landing-container">

                    <div class="episodes-landing-head prllx-stndrd">
                        <div class="small">Latest Show</div>
                        <h1>Episode No.{customContent.episode-number}</h1>
                    </div>
                    <div class="episodes-landing-sub prllx-stndrd">
                        <span>with</span>
                        <p>Shakey Graves / The Arcs / Dave Chapelle / Gogol Bordello & more</p>
                    </div>
                    <div class="cta-dummy" data-icon="eye" data-label="Watch now" data-class="landing-cta prllx-custom" data-attributes="href=#,data-prllx=.04">{@|apply svg-icon-eye.block}</div>
                    <!--php print_cta(array(
                        'icon' => 'images/eye',
                    'label' => 'Watch now',
                    'class' => array('landing-cta', 'prllx-custom'),
                    'attributes' => array('href' => '#', 'data-prllx' => '.04')
                    )); -->
                    <!--<a class="episodes-landing-cta icon-eye" href="">Watch episode no. 5, mar 2016</a>-->

                </div><!-- .landing-container -->
            </section>
        {.end}
    {.end}
{.end}

<div class="site-content">

    <section class="episodes-previous">
        <div class="section-head prllx-custom" data-prllx="-.04">
            <h2>Past Shows</h2>
            <p>See the performances</p>
        </div><!-- .section-head -->
        <div class="episodes-overview posters">

            {.repeated section items}
                {.repeated section categories}
                    {.equal?:@:"aired"}
                        <!--div class="episodes-overview-row"-->
                            <div class="episodes-overview-item prllxposter">
                                {@|apply poster-parallax.block}
                                <div class="cta-dummy" data-label="Explore" data-icon="eye" data-attributes="href={fullUrl}">{@|apply svg-icon-eye.block}</div>
                                <!--php print_cta(array(
                                        'label' => 'Explore',
                                'icon' => 'images/eye',
                                'attributes' => array('href' => '?p=episode')
                                )); -->
                                <div class="light"></div>
                            </div><!-- .episodes-overview-item -->
                        <!--/div><!-- .episodes-overview-row -->
                    {.end}
                {.end}
            {.end}<!-- .end repeated items -->

        </div><!-- .posters.episodes-overview -->
    </section><!-- .episodes-previous -->

    <squarespace:query collection="{collection.urlId}" category="upcoming" limit="3">
        <section class="episodes-upcoming">
            <div class="section-head prllx-custom" data-prllx=".03">
                <h2>Next Shows</h2>
                <p>See who's coming</p>
            </div>
            <ul>
                {.repeated section items}
                <li>
                    <a href="{fullUrl}" class="img tv prllx-custom" data-prllx=".086" style="background-image:url('{customContent.upcoming-thumbnail.assetUrl}');">
                        <div class="inside prllx-lo-stndrd">
                            <span>Ep10{customContent.episode-number}</span><strong>{addedOn|date %b %d}</strong>
                        </div>
                    </a>
                </li>
                {.end}
            </ul>
        </section>
    </squarespace:query>
</div>
<squarespace:script src="custom/episdode-hero.js" />
<squarespace:script src="custom/page_episodes.js" />