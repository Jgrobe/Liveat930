<section class="merch-landing">
    <div class="fill-parent mask">
        <div class="landing landing-bg" style="background-image:url('{collection.mainImage.assetUrl}');"></div>
    </div>
    <div class="landing-container">
        <h1 class="l-headline">{collection.navigationTitle}</h1>
    </div><!-- .landing-container -->
</section>

<section class="merch-overview">
    {.repeated section items}
        <div class="merch-item">
            <div class="image img vertical rel" style="background-image:url('{assetUrl}');">
                <div class="title">Live at 9:30 {title}</div>
                {.section variants.0}
                    <div class="price">$ <span class="amount">{price}</span></div>
                {.end}
            </div>
            <div class="description">{excerpt}</div>
            <!-- <ul class="sizes">
                {.repeated section variants}
                    {.repeated section optionValues}
                        {.equal?:optionName:"Size"}
                            <li>{value}</li>
                        {.end}
                    {.end}
                {.end}
            </ul><!-- .sizes -->
            <div class="cta-dummy" data-label="Buy now!" data-class="cta-buy" data-attributes="href={fullUrl}"></div>
        </div><!-- .merch-item -->
    {.end}
</section>

<script>
    // format prices
    jQuery('.price .amount').each(function(){jQuery(this).html((parseFloat(jQuery(this).html())/100).toFixed(2))});
</script>