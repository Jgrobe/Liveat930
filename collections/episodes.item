{.section item}

    <section class="episodes-landing episode-detail">
        <div class="fill-parent mask">
            <div class="landing-bg" style="background-image:url('{customContent.hero-fallback-image.assetUrl}');" data-shape="{customContent.episode-shape}">
            <video src="{customContent.episode-hero-video}" muted autoplay loop></video>
        </div>
        </div><!-- .mask -->

        <div class="episodes-landing-head">
            <h1>Episode No.{customContent.episode-number}</h1>
            <div class="small">Latest Show</div>
            <div class="cta-dummy" data-label="Watch now" data-icon="eye" data-attributes="id=cta-play-episode,data-url={customContent.episode-hero-video}">{@|apply svg-icon-eye.block}</div>
            <!--<a href="#" class="cta-play-episode">Watch now</a>-->
        </div>
        <div class="text-layer">
            {body}
            {@|apply module-share-episode.block}
        </div><!-- .episodes-landing-sub -->
    </section>

    <div class="site-content">

        {.if customContent.episode-videoclips}
        <section class="video-gallery teaser no-shift">

            <div class="section-head">
                <h2>Watch and share</h2>
                <p><b>Video clips from this episode</b></p>
            </div>

            <squarespace:query collection="clips" tag="{customContent.episode-videoclips}" limit="3">
                <!--{.repeated section tags}{@},{.end}-->

                <script>console.log('Clips Tags query ', {@|json-pretty});</script>

                <div class="video-gallery-videos related-clips-gallery top-spaced" data-payload="3">
                    <div class="gutter-sizer"></div>

                    {.repeated section items}

                        {@|apply module-clip-item.block}

                        <!--<div class="video">-->
                            <!--<div class="image current-image" style="background-image:url('{assetUrl}');">-->
                                <!--<div class="cta-dummy" data-icon="eye" data-class="negative play" data-attributes="href={fullUrl}">{@|apply svg-icon-eye.block}</div>-->
                            <!--</div>-->
                            <!--<div class="flex-cols">-->
                                <!--<div class="title">{title}</div>-->
                            <!--</div>-->
                        <!--</div>-->

                    {.end}<!-- .end repeated section items -->

                </div><!-- .video-gallery-videos -->

            </squarespace:query>

            <div class="centered top-spaced">
                <div class="cta-dummy" data-label="Load more clips" data-icon="icon-load" data-class="load-clips upsized-icon load-more-cta">{@|apply svg-icon-load.block}</div>
                <!--php print_cta(array(
                    'label' => 'Load more clips',
                'icon' => 'images/icon-load',
                'class' => array('load-clips', 'upsized-icon')
                )); -->
                <!--<a class="episodes-landing-cta icon-refresh static" href="">Load more clips</a>-->
            </div><!-- .centered.top-spaced -->

        </section><!-- .video-gallery -->

        {.end}<!-- .end if tags -->

        {.if customContent}{.section customContent}

            {.if episode-gallery}
                <section class="image-slider gallery-container">

                    <script>
                        console.log('gallery data???', {@|json-pretty});
                        var _gallery = {episode-gallery|json};
                    </script>


                    <div class="slider-container top-spaced">
                        <div class="slider-images">
                            <div class="image current-image imgfill gallery-image" style=""></div>
                            <div class="image pattern imgfill" style="background-image:url('{website.baseUrl}/assets/images/pattern-logo-bg.jpg');"></div>
                            <div class="image next-image imgfill gallery-image" style=""></div>
                        </div><!-- .slider-images -->

                        <div class="slider-ui">
                            <div class="slider-arrows">
                                <div class="arrow prev">{@|apply svg-arrow-cap.block}</div>
                                <div class="arrow next">{@|apply svg-arrow-cap.block}</div>
                            </div><!-- .slider-arrows -->
                            <!--<div class="slider-label">-->
                                <!--<h3>-->
                                    <!--<span class="gallery-current">2</span>/<span class="gallery-total">8</span>-->
                                <!--</h3>-->
                            <!--</div>-->
                        </div><!-- .slider-ui -->
                    </div><!-- .slider-container -->

                </section><!-- .image-slider -->
            {.end}<!-- .end if episode-gallery post -->

            {.if episode-blogpost}
                <squarespace:query collection="blog" limit="1" tag="{episode-blogpost}">
                    <script>
                        console.log('thats the blog query', {@|json-pretty});
                    </script>
                    {.section items.0}
                    <section class="post-excerpt">

                        <div class="section-head">
                            <h2>Explore the episode</h2>
                            <!--<p><b>Episode No.5, August 2016</b></p>-->
                        </div><!-- .section-head -->

                        <div class="excerpt-container top-spaced">
                            <div class="image pattern imgfill" style="background-image:url('{website.baseUrl}/assets/images/pattern-logo-bg.jpg');"></div>
                            <div class="image post-image imgfill" style="background-image:url('{assetUrl}}');"></div>
                            <div class="text-layer">
                                <div class="section-head excerpt-head">
                                    <h2>{title}</h2>
                                </div>
                                <div class="excerpt-body">
                                    {excerpt}
                                </div>
                                <div class="cta-dummy" data-icon="eye" data-label="Full story" data-attributes="href={fullUrl}">{@|apply svg-icon-eye.block}</div>
                                <!--php print_cta(array(
                                'label' => 'Full story',
                                'icon' => 'images/eye'
                                )); -->
                                <!--<a class="episodes-landing-cta icon-eye" href="">Full story</a>-->
                            </div><!-- .text-layer -->
                        </div><!-- .excerpt-container -->

                    </section><!-- .post-excerpt -->
                    {.end}
                </squarespace:query>
            {.end}<!-- .end if blog post -->

        {.end}{.end}<!-- .end if customContent -->

        <section class="video-gallery teaser no-shift">

            <div class="section-head">
                <h2>Get more</h2>
            </div>

            <squarespace:query collection="clips" category="{customContent.episode-clips-categories}" limit="4">

                <script>console.log('clips categories query', {@|json-pretty});</script>

                <div class="video-gallery-videos related-clips-categories-gallery top-spaced" data-payload="4">
                    <div class="gutter-sizer"></div>

                    {.repeated section items}

                    <div class="video">
                        <div class="image" style="background-image:url('{assetUrl}');">

                            <div class="cta-dummy" data-icon="icon-arrow" data-class="negative play goto" data-attributes="href={collection.fullUrl}?filter::{categories.0|slugify}">{@|apply svg-icon-arrow.block}</div>
                            <!--php print_cta(array(
                                    'icon' => 'images/icon-arrow',
                            'class' => array('negative', 'play', 'goto')
                            )); -->
                            <span class="video-label">More {categories.0}</span>
                        </div>
                        <div class="flex-cols">
                            <div class="title">{.if customContent.subtitle}{customContent.subtitle} â€¢ {.end}{title}</div>
                            <div class="cta-dummy" data-tag="div" data-label="View" data-icon="eye" data-class="plain" data-hover="true">{@|apply svg-icon-eye.block}</div>
                            <!--php print_cta(array(
                                'label' => 'View',
                                'icon' => 'images/eye',
                                'class' => array('plain'),
                                'hover' => false
                            )); -->
                        </div><!-- .flex-cols -->
                    </div><!-- .video -->

                    {.end}<!-- .end repeated section items -->
                </div><!-- .video-gallery-videos -->

            </squarespace:query>

        </section><!-- .video-gallery -->
    </div>
{.end}
<squarespace:script src="custom/page_episode.js" />